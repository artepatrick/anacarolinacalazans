{
  "name": "niver2025",
  "version": "1.0.0",
  "description": "Site de confirmação de presença para Ana Carolina Calazans",
  "main": "server/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "node build-config.js && vite build && cp -r netlify/functions dist/netlify/functions",
    "preview": "vite preview",
    "server": "node server/index.js",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "netlify deploy --prod",
    "dev:all": "concurrently \"npm run server\" \"netlify dev\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "libphonenumber-js": "^1.10.55",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "netlify-cli": "^17.0.0",
    "vite": "^5.0.0"
  }
}
